{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ESP-IDF Build",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy", "Bypass",
                "-NoProfile",
                "-Command",
                "& { . 'C:/Espressif/frameworks/esp-idf-v5.5/export.ps1'; idf.py build }"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}

